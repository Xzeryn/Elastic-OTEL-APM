{
  "name": "procurement-simulator",
  "version": "2.0.0",
  "description": "Playwright-based simulator for generating APM traffic to the Procurement Demo with auto-cleanup",
  "main": "simulator.js",
  "scripts": {
    "start": "node simulator.js",
    "start:no-uploads": "ENABLE_UPLOADS=false node simulator.js",
    "start:no-invoices": "ENABLE_INVOICES=false node simulator.js",
    "start:browse-only": "ENABLE_UPLOADS=false ENABLE_INVOICES=false node simulator.js",
    "start:fast": "ACTION_DELAY=1000 CYCLE_DELAY=2000 node simulator.js",
    "start:slow": "ACTION_DELAY=5000 CYCLE_DELAY=10000 node simulator.js",
    "start:visible": "HEADLESS=false node simulator.js"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
